<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/captura_de_pantalla_2025_01_10_104056">


    <!-- Logo y tÃ­tulo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/_7258f22b10746e8af2696892acf77b1_free__1__removebg_preview__1_"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CardView para Videos -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVideos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="videosClick"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/videosBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Videos"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:src="@drawable/_898856" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView para Quiz -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardQuiz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardVideos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="quizClick"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/quiz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quiz"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:src="@drawable/_753" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView para Jocs extres -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardJocsExtres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/blue"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardQuiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="juegosClick"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/jocs_extres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Jocs extres"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:src="@drawable/png_clipart_black_white_video_game_game_controllers_playstation_3_others_miscellaneous_game" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView para Botiga -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBotiga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/yellow"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardJocsExtres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:onClick="tiendaClick"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/botiga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Botiga"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="46dp"
                android:layout_height="45dp"
                android:src="@drawable/_4564" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>